{% extends 'base.html.twig' %}
{% block title %}TODOLIST{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="/css/accueil.css">{% endblock %}
{% block body %}
   <header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/accueil">
      <img src="img/logo_transpa.png" width="30" height="30" alt="logo">
    </a>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
        <button type="button" class="btn btn-outline-danger my-2 my-sm-0" data-toggle="modal" data-target=".bd-example-modal-lg">Create projet</button>
        </li>
      </ul>
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </nav>
  <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
    <h3>Nouveau Projet</h3>
      <div class="container">
    
{{ form_start(form) }}
<div class="form-group">
{{ form_label(form.name_projet)}}
{{ form_widget(form.name_projet, { 'attr': {'class': 'form-control'} })}}
</div>
<div class="form-group">
{{ form_label(form.desc_projet)}}
{{ form_widget(form.desc_projet, { 'attr': {'class': 'form-control'} })}}
</div>
<div class="form-group">
{{ form_label(form.img_projet)}}
{{ form_widget(form.img_projet)}}
</div>
<div class="form-group">
{{ form_label(form.name_domain)}}
{{ form_widget(form.name_domain, { 'attr': {'class': 'form-control'} })}}
</div>
<div class="form-group">
{{ form_label(form.logo_projet)}}
{{ form_widget(form.logo_projet)}}
</div>
<div class="form-group">
{{ form_label(form.doc_projet)}}
{{ form_widget(form.doc_projet)}}
</div>
<div class="form-group">
<div class="row" style="justify-content: space-around;">
{{ form_label(form.date_start)}}
{{ form_widget(form.date_start)}}
{{ form_label(form.date_end)}}
{{ form_widget(form.date_end)}}
</div>
</div>
  <button type="submit" class="btn btn-danger">Create</button>
{{ form_end(form) }}
</div>
<div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
</header>
<main class="global">
<div class="container">
  <h1 id="home">Projet en d√©veloppement</h1>
</div>
    <section class="main-container">
    <div class="location" id="home">
      
      <div class="box">

{% for projet in projets %}

<h1 data-toggle="modal" data-target="#exampleModal{{ projet.Id}}" aria-controls="exampleModal">{{ projet.nameProjet}}<img src="img/{{projet.imgProjet}}"></h1>

     <!-- Modal -->
<div class="modal fade" id="exampleModal{{ projet.Id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{ projet.nameProjet}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="projet">

           <img src="img/{{projet.imgProjet}}">

            <p>{{ projet.descProjet}}</p>
           
            <a href="{{ path('todolist', {'id':projet.id}) }}" class="btn btn-primary">todolist</a>
            <a href="#" class="btn btn-danger delete-projet" data-id="{{ projet.id }}">Delete</a>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
     </div>
      </div>
    </div>
   
   {% endfor %}
    </div>
  </section>
  
    <div class="bottom">
    <h1 id="home">List des contrats</h1>
    <div class="container">
    <table class="table table-bordered table-dark">
  <thead>
    <tr>
      <th scope="col">Nom client</th>
      <th scope="col">Date debut contrat</th>
      <th scope="col">Date fin contrat</th>
      <th scope="col">Date de contact</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">Mark</th>
      <td>12/08/2018</td>
      <td>2/08/2018</td>
      <td>2/08/2018</td>
    </tr>
    <tr>
      <th scope="row">Jacob</th>
      <td>12/08/2018</td>
      <td>12/08/2018</td>
      <td>12/08/2018</td>
    </tr>
    <tr>
      <th scope="row">Thornton</th>
      <td>12/08/2018</td>
      <td>12/08/2018</td>
      <td>12/08/2018</td>
    </tr>
  </tbody>
</table>
</div>
    </div>
  </main>
{% endblock %}
{% block javascripts %}
  <script src="/js/main.js"></script>
{% endblock %}