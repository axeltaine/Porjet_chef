{% extends 'base.html.twig' %}
{% block title %}MaitriseWebPro{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="/css/dashboard.css">
{% endblock %}
{% block body %}
<header>
    <nav class="navbar fixed-top navbar-expand-lg scrolling-navbar double-nav">
      <div class="float-left">
      <a class="navbar-brand" href="/accueil">
       <img src="../img/logo_transpa.png" width="30" height="30" alt="logo" id="logo">
       </a>
      </div>
      <div class="breadcrumb-dn mr-auto">
        <p style="color: white;">Dashboard Maitrise Web Pro</p>
      </div>
      <div class="d-flex change-mode">
        <ul class="nav navbar-nav nav-flex-icons ml-auto">
          <li class="nav-item dropdown notifications-nav">
            <a class="nav-link dropdown-toggle waves-effect" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: white;">
              <span class="badge red">3</span> <i class="fas fa-bell"></i>
              <span class="d-none d-md-inline-block">Notifications</span>
            </a>
            <div class="dropdown-menu dropdown-primary" aria-labelledby="navbarDropdownMenuLink">
              <a class="dropdown-item waves-effect waves-light" href="#">
                <i class="far fa-money-bill-alt mr-2" aria-hidden="true"></i>
                <span>Nouvelle Notification</span>
                <span class="float-right"><i class="far fa-clock" aria-hidden="true"></i> 13 min</span>
              </a>
              <a class="dropdown-item waves-effect waves-light" href="#">
                <i class="far fa-money-bill-alt mr-2" aria-hidden="true"></i>
                <span>Nouvelle Notification</span>
                <span class="float-right"><i class="far fa-clock" aria-hidden="true"></i> 33 min</span>
              </a>
              <a class="dropdown-item waves-effect waves-light" href="#">
                <i class="fas fa-chart-line mr-2" aria-hidden="true"></i>
                <span>Nouvelle Notification</span>
                <span class="float-right"><i class="far fa-clock" aria-hidden="true"></i> 53 min</span>
              </a>
            </div>
          </li>
          {% if app.user %}
        <li class="nav-item dropdown">
          <div class="chip chip-lg aqua-gradient white-text nav-link dropdown-toggle" id="navbarDropdownMenuLink"
            role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
            style="padding-right: 1rem;">
            <img src="../img/{{app.user.avatar}}" class="avatar avatar-mini" alt="Avatar de {{app.user.NameUser}}">
            Bienvenue {{app.user.NameUser}}
          </div>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item" href="{{ path('editProfil', {'id':app.user.id})  }}">Modifier Profil</a>
            {% if app.user and is_granted('ROLE_ADMIN') %}
            <a href="{{ path('createProfil') }}" class="dropdown-item">Créer Profil</a>
            {% endif %}
            <a class="navbar-logout dropdown-item" href="{{ path('logout')}}" data-toggle="tooltip" title="Déconnexion">
              Déconnexion
            </a>
            <a class="dropdown-item" href="#">
              <div class="custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" id="customSwitch1">
                <label class="custom-control-label" for="customSwitch1" name="dark_light"
                  onclick="toggleDarkLight()">Thème sombre</label>
              </div>
            </a>
          </div>
        </li>
        {% endif %}
        </ul>
    </div>
    </nav>
    </div>
  </header>
  <main class="global">
    <div class="container-fluid">
      <section>
      <H2><u>{{ projet.nameProjet}} :</u></H2>
        <div class="row">
          <div class="col-xl-6 col-md-6 mb-4">
            <div class="card">
              <div class="row mt-3">
                <div class="col-md-5 col-5 text-left pl-4">
                  <a type="button" class="btn-floating btn-lg primary-color ml-4"><i class="fas fa-user"
                      aria-hidden="true"></i></a>
                </div>
                <div class="col-md-7 col-7 text-right pr-5">
                  <h5 class="ml-4 mt-4 mb-2 font-weight-bold">{{ projet.data.visitor}}</h5>
                  <p class="font-small grey-text">Nombre de visiteurs uniques</p>
                </div>
              </div>
              <div class="row my-3">
                <div class="col-md-7 col-7 text-left pl-4">
                  <p class="font-small font-up ml-4 font-weight-bold">Le mois dernier</p>
                </div>
                <div class="col-md-5 col-5 text-right pr-5">
                  <p class="font-small grey-text">145,567</p>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xl-6 col-md-6 mb-4">
            <div class="card">
              <div class="row mt-3">
                <div class="col-md-5 col-5 text-left pl-4">
                  <a type="button" class="btn-floating btn-lg warning-color ml-4"><i class="far fa-eye"
                      aria-hidden="true"></i></a>
                </div>
                <div class="col-md-7 col-7 text-right pr-5">
                  <h5 class="ml-4 mt-4 mb-2 font-weight-bold">{{ projet.data.page}}</h5>
                  <p class="font-small grey-text">Nombre de pages vues</p>
                </div>
              </div>
              <div class="row my-3">
                <div class="col-md-7 col-7 text-left pl-4">
                  <p class="font-small font-up ml-4 font-weight-bold">Le mois dernier</p>
                </div>
                <div class="col-md-5 col-5 text-right pr-5">
                  <p class="font-small grey-text">145,567</p>
                </div>
              </div>
            </div>
          </div>
      </section>
      <div style="height: 5px"></div>
      <section class="mb-5">
        <div class="card card-cascade narrower">
          <section>
            <div class="row">
              <div class="col-xl-5 col-md-12 mr-0">
                <div class="view view-cascade gradient-card-header light-blue lighten-1">
                  <h4 class="h4-responsive mb-0 font-weight-bold">Traffic</h4>
                </div>
                <div class="card-body card-body-cascade pb-0">
                  <div class="row card-body pt-3">
                    <div class="col-md-12">
                      <h4>
                        <span class="badge big-badge light-blue lighten-1">Plage de données</span>
                      </h4>
                      <select class="mdb-select">
                        <option value="" disabled selected>Choisissez la période</option>
                        <option value="1">Aujourd'hui</option>
                        <option value="2">Hier</option>
                        <option value="3">Les 7 derniers jours</option>
                        <option value="3">Les 30 derniers jours</option>
                        <option value="3">La semaine dernière</option>
                        <option value="3">Le mois dernier</option>
                      </select>
                      <br>
                      <h5><span class="badge big-badge light-blue lighten-1">Date personnalisée</span></h4>
                        <br>
                        <div class="d-flex justify-content-between">
                          <div class="md-form">
                            <input placeholder="Choisir date" type="text" id="from" class="form-control datepicker">
                            <label for="date-picker-example">De</label>
                          </div>
                          <div class="md-form">
                            <input placeholder="Choisir date" type="text" id="to" class="form-control datepicker">
                            <label for="date-picker-example">À</label>
                          </div>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-xl-7 col-md-12 mb-4">
                <div class="view view-cascade gradient-card-header white">
                  <canvas id="barChart"></canvas>
                </div>
              </div>
            </div>
          </section>
        </div>
      </section>
      <section class="section">
        <div class="row">
          <div class="col-md-12 col-lg-4 ">
            <div class="card mb-4">
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table large-header">
                    <thead>
                      <tr>
                        <th class="font-weight-bold"><strong>Mots clés</strong></th>
                        <th class="font-weight-bold"><strong>Meilleur rang</strong></th>
                        <th class="font-weight-bold"><strong>Rang moyen</strong></th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>{{ projet.data.keyword1}}</td>
                        <td>1</td>
                        <td>1</td>
                      </tr>
                      <tr>
                        <td>{{ projet.data.keyword2}}</td>
                        <td>1</td>
                        <td>1</td>
                      </tr>
                      <tr>
                        <td>{{ projet.data.keyword3}}</td>
                        <td>8</td>
                        <td>11</td>
                      </tr>
                      <tr>
                        <td>{{ projet.data.keyword4}}</td>
                        <td>3</td>
                        <td>6</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-8 col-md-12">
            <div class="card mb-4">
              <div class="card-body">
                <table class="table large-header">
                  <thead>
                    <tr>
                      <th class="font-weight-bold"><strong>Navigateur</strong></th>
                      <th class="font-weight-bold"><strong>Visits</strong></th>
                      <th class="font-weight-bold"><strong>Pages</strong></th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>Google Chrome</td>
                      <td>15</td>
                      <td>307</td>
                    </tr>
                    <tr>
                      <td>Mozilla Firefox</td>
                      <td>32</td>
                      <td>504</td>
                    </tr>
                    <tr>
                      <td>Safari</td>
                      <td>41</td>
                      <td>613</td>
                    </tr>
                    <tr>
                      <td>Opera</td>
                      <td>14</td>
                      <td>208</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section>
        <div class="row">
          <div class="col-xl-12 col-md-12">
            <div class="card mb-4">
              <div class="row">
                <div class="col-md-12 text-center">
                  <h5 class="mt-4 mb-4 font-weight-bold">Avi ici</h5>
                </div>
              </div>
              <div class="card-body">
               <p>{{ projet.data.advice}}</p>
          </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
{% endblock %}
{% block javascripts %}
<script src="../js/dashboard.js"></script>
{% endblock %}