<link rel="stylesheet" href="/css/edit.css">
{% endblock %}
{% block body %}
   <header>
 <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/accueil">
              <img src="../img/logo_transpa.png" width="30" height="30" alt="logo" id="logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
        
        
       
         <div class="collapse navbar-collapse " id="navbarSupportedContent">
        {% if app.user and is_granted('ROLE_ADMIN') %}
                  <button type="button" class="btn btn-outline-danger my-2 my-sm-0" data-toggle="modal" data-target=".bd-example-modal-lg">Create projet</button>
                  <button type="button" class="btn btn-outline-danger my-2 my-sm-0" data-toggle="modal" data-target=".bd-example-modal-lg">Create Profil</button>
                {% endif %}  
</div>
               
            <ul class="navbar-nav mr-auto ">
              {% if app.user %}
              <li class="nav-item dropdown">
                 <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                 <img src="../img/{{app.user.avatar}}" class="avatar avatar-mini" alt="Avatar de {{app.user.NameUser}}">
                 Bienvenue {{app.user.NameUser}}
                 </a>

                <div class="dropdown-menu"aria-labelledby="navbarDropdownMenuLink">
                <a class="dropdown-item" href="#">Mon Profil</a>
                  <a class="navbar-logout dropdown-item" href="{{ path('logout')}}" data-toggle="tooltip"  title="Déconnexion" >
